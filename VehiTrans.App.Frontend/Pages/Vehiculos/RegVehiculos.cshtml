@page
@model VehiTrans.App.Frontend.RegVehiculosModel
@{
      ViewData["Title"] = "DIGSOL - Registro Vehiculo";
}
<h1>Registro del Vehiculo 🚌🚕</h1>
<hr class="border border-primary border-3 opacity-75">
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0">
        <p>
            <label asp-for="NewVehiculo.Placa">Placa:  </label>
            <input type="text" asp-for="NewVehiculo.Placa" class="mr-5">
            <span class="text-danger" asp-validation-for="NewVehiculo.Placa"></span>
        </p>
        <p>
            <label asp-for="NewVehiculo.Marca">Marca:  </label>
            <input type="text" asp-for="NewVehiculo.Marca" class="mr-5">
        </p>
        <p>
            <label asp-for="NewVehiculo.Modelo">Modelo: </label>
            <input type="text" asp-for="NewVehiculo.Modelo" class="mr-5">
        </p>
        <p>
            <label asp-for="NewVehiculo.VehiculoTipoId">Tipo de Vehiculo: </label>
                <select asp-for="NewVehiculo.VehiculoTipoId" class="mr-5">
                    @foreach (var LTipoVehiculo in Model.ListaTipoVehiculo)
                    {
                        <option value="@LTipoVehiculo.VehiculoTipoId">@LTipoVehiculo.Descripcion</option>
                    }
                    
                </select>
            @* <input type="text" asp-for="NewVehiculo.VehiculoTipoId" class="mr-5"> *@
        </p>
        <p>
            <label asp-for="NewVehiculo.CantidadPasajeros">Cantidad de Pasajeros: </label>
            <input type="text" asp-for="NewVehiculo.CantidadPasajeros" class="mr-5">
        </p>
        <p>
            <label asp-for="NewVehiculo.CilindrajeMotor">Cilindraje del Motor: </label>
            <input type="text" asp-for="NewVehiculo.CilindrajeMotor" class="mr-5">
        </p>
        <p>
            <label asp-for="NewVehiculo.PropietarioId">Propietario: </label>
            <select asp-for="NewVehiculo.PropietarioId" class="mr-5">
                @foreach (var LPropietario in Model.ListaPropietario)
                {
                    <option value="@LPropietario.PropietarioId">@LPropietario.Nombre @LPropietario.Apellidos</option>
                }
            </select>
            @* <input type="text" asp-for="NewVehiculo.PropietarioId" class="mr-5"> *@
        </p>
        <p>
            <label asp-for="NewVehiculo.ConductorId">Conductor: </label>
            <select asp-for="NewVehiculo.ConductorId" class="mr-5">
                @foreach (var LConductor in Model.ListaConductor)
                {
                    <option value="@LConductor.ConductorId">@LConductor.Nombre @LConductor.Apellidos</option>
                }
            </select>
            @* <input type="text" asp-for="NewVehiculo.ConductorId" class="mr-5"> *@
        </p>
        <p>
            <label asp-for="NewVehiculo.MecanicoId">Mecanico: </label>
            <select asp-for="NewVehiculo.MecanicoId" class="mr-5">
                @foreach (var LMecanico in Model.ListaMecanico)
                {
                    <option value="@LMecanico.MecanicoId">@LMecanico.Nombre @LMecanico.Apellidos</option>
                }
            </select>
            @* <input type="text" asp-for="NewVehiculo.MecanicoId" class="mr-5"> *@
        </p>


        <button type="submit" class="btn btn-primary">Addicionar</button>
    </div>
</form>
