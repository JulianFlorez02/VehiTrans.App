@page
@model VehiTrans.App.Frontend.Pages.EditMecanicoModel
@{
}
<h2>Editar Mecanico</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="EditMecanico.Documento">Documento:</label>
        <input asp-for="EditMecanico.Documento" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Documento"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.Nombre">Nombre:</label>
        <input asp-for="EditMecanico.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.Apellidos">Apellidos:</label>
        <input asp-for="EditMecanico.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.Telefono">Telefono:</label>
        <input asp-for="EditMecanico.Telefono" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Telefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.FechaNacimiento">Fecha de Nacimiento:</label>
        <input type="date" asp-for="EditMecanico.FechaNacimiento" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.FechaNacimiento"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.Usuario">Usuario:</label>
        <input asp-for="EditMecanico.Usuario" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Usuario"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.Contraseña">Contraseña:</label>
        <input type="password" asp-for="EditMecanico.Contraseña" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Contraseña"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.Direccion">Dirección:</label>
        <input asp-for="EditMecanico.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditMecanico.NivelEstudio">Nivel de estudio:</label>
        <input asp-for="EditMecanico.NivelEstudio" class="form-control">
        <span class="text-danger" asp-validation-for="EditMecanico.NivelEstudio"></span>
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>

<a asp-page="./Mecanico" class="btn-default">Lista</a>
